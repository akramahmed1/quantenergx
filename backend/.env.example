# Environment Configuration
NODE_ENV=development
PORT=3001

# Security Configuration
ENFORCE_HTTPS=true
PASSWORD_ALGORITHM=argon2
BCRYPT_ROUNDS=12

# hCaptcha Configuration
HCAPTCHA_ENABLED=true
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/quantenergx
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quantenergx
DB_USER=user
DB_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT - Server-side only secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# API Keys - Server-side only
API_ENCRYPTION_KEY=your-32-char-encryption-key-here

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH=uploads/

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
DEFAULT_OCR_LANGUAGE=eng

# External APIs and Integrations - Server-side only
GOOGLE_CLOUD_VISION_API_KEY=your-google-vision-api-key

# Market Data Providers - Server-side only
BLOOMBERG_API_URL=https://api.bloomberg.com
BLOOMBERG_API_KEY=your-bloomberg-api-key
REFINITIV_API_URL=https://api.refinitiv.com
REFINITIV_API_KEY=your-refinitiv-api-key
ICE_API_URL=https://api.ice.com
ICE_API_KEY=your-ice-api-key
NYMEX_API_URL=https://api.cmegroup.com
NYMEX_API_KEY=your-nymex-api-key

# WhatsApp Business API (Meta) - Server-side only
WHATSAPP_API_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_API_URL=https://graph.facebook.com/v18.0

# Telegram Bot - Server-side only
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Email Configuration - Server-side only
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-provider-api-key
FROM_EMAIL=notifications@quantenergx.com
FROM_NAME=QuantEnergx
MAILGUN_DOMAIN=your-mailgun-domain

# SMS Configuration - Server-side only
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret

# Logging and Monitoring
LOG_LEVEL=info
LOG_FILE=logs/app.log
AUDIT_LOG_ENABLED=true
SECURITY_LOG_ENABLED=true