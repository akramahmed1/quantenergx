{
  "name": "quantenergx-backend",
  "version": "1.0.0",
  "description": "Backend services for QuantEnergx energy trading platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/server.js",
    "test:smoke": "jest --testPathPattern=src/__tests__/smoke.test.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:fuzz": "jest --testPathPattern=test/fuzz",
    "test:contract": "jest --testPathPattern=test/contract",
    "test:regression": "../scripts/regression-test.sh",
    "test:mutation": "stryker run",
    "test:mutation:incremental": "stryker run --incremental",
    "test:security": "jest --testPathPattern=test/security",
    "test:all": "npm run lint && npm run test:coverage && npm run test:fuzz && npm run test:contract && npm run test:security",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:security": "eslint src/ --config .eslintrc.security.js",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run"
  },
  "keywords": [
    "energy-trading",
    "commodities",
    "oil",
    "gas",
    "renewable-energy",
    "trading-platform"
  ],
  "author": "QuantEnergx Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akramahmed1/quantenergx.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/akramahmed1/quantenergx/issues"
  },
  "homepage": "https://github.com/akramahmed1/quantenergx#readme",
  "dependencies": {
    "@grpc/grpc-js": "^1.8.14",
    "@grpc/proto-loader": "^0.7.7",
    "argon2": "^0.43.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "hcaptcha": "^0.2.0",
    "helmet": "^6.1.5",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "moment": "^2.29.4",
    "multer": "^2.0.0-rc.4",
    "node-telegram-bot-api": "^0.66.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.0",
    "redis": "^4.6.5",
    "sharp": "^0.32.1",
    "socket.io": "^4.6.2",
    "tesseract.js": "^4.1.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/jest-runner": "^9.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "eslint": "^8.57.1",
    "fast-check": "^4.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
