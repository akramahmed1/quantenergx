{
  "name": "quantenergx-backend",
  "version": "1.0.0",
  "description": "Backend services for QuantEnergx energy trading platform",
  "main": "src/server.js",
  "scripts": {
    "prebuild": "node ../scripts/validate-env.js backend",
    "build": "tsc",
    "prestart": "node ../scripts/validate-env.js backend",
    "start": "node dist/server.js",
    "start:js": "node src/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:js": "nodemon src/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:fuzz": "jest --testPathPattern=test/fuzz",
    "test:contract": "jest --testPathPattern=test/contract",
    "test:regression": "../scripts/regression-test.sh",
    "test:mutation": "stryker run",
    "test:mutation:incremental": "stryker run --incremental",
    "test:security": "jest --testPathPattern=test/security",
    "test:all": "npm run lint && npm run test:coverage && npm run test:fuzz && npm run test:contract && npm run test:security && npm run test:load",
    "test:load": "k6 run test/performance/load/api-load-test.js",
    "test:stress": "k6 run test/performance/load/stress-test.js",
    "test:spike": "k6 run test/performance/load/spike-test.js",
    "test:volume": "k6 run test/performance/load/volume-test.js",
    "test:performance": "npm run test:load && npm run test:stress",
    "test:performance-regression": "jest --testPathPattern=test/performance/regression",
    "test:fuzz:extended": "jest --testPathPattern=test/fuzz --verbose --runInBand",
    "test:security:zap": "node scripts/zap-security-scan.js",
    "test:security:static": "npm run lint:security && bandit -r ../scripts/ -f json -o security-static-report.json",
    "test:security:dependencies": "npm audit --audit-level=moderate && python3 -m pip install safety && safety check",
    "test:security:all": "npm run test:security && npm run test:security:zap && npm run test:security:static && npm run test:security:dependencies",
    "test:chaos": "jest --testPathPattern=test/reliability/chaos",
    "test:reliability": "jest --testPathPattern=test/reliability",
    "security:scan": "npm run test:security:all",
    "security:zap": "npm run test:security:zap",
    "security:audit": "npm audit --audit-level=moderate",
    "security:static": "npm run test:security:static",
    "performance:monitor": "node scripts/performance-monitor.js",
    "test:smoke": "jest --testPathPattern=test/smoke",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:security": "ESLINT_USE_FLAT_CONFIG=false eslint src/ --config .eslintrc.security.json",
    "lint:security:json": "ESLINT_USE_FLAT_CONFIG=false eslint src/ --config .eslintrc.security.json --format json --output-file eslint-security-results.json",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run"
  },
  "keywords": [
    "energy-trading",
    "commodities",
    "oil",
    "gas",
    "renewable-energy",
    "trading-platform"
  ],
  "author": "QuantEnergx Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akramahmed1/quantenergx.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/akramahmed1/quantenergx/issues"
  },
  "homepage": "https://github.com/akramahmed1/quantenergx#readme",
  "dependencies": {
    "@aws-sdk/client-athena": "^3.859.0",
    "@aws-sdk/client-s3": "^3.859.0",
    "@grpc/grpc-js": "^1.8.14",
    "@grpc/proto-loader": "^0.7.7",
    "@storybook/preset-create-react-app": "1.2.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node-cron": "^3.0.11",
    "@types/socket.io": "^3.0.1",
    "apache-arrow": "^21.0.0",
    "argon2": "^0.43.1",
    "axios": "^1.8.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "hcaptcha": "^0.2.0",
    "helmet": "^6.1.5",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "knex": "^2.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "multer": "^2.0.0-rc.4",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "parquetjs": "^0.11.2",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.0",
    "react-scripts": "0.0.0",
    "redis": "^4.6.5",
    "sharp": "^0.32.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tesseract.js": "^4.1.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/jest-runner": "^9.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.34",
    "artillery": "^2.0.23",
    "eslint": "^8.57.1",
    "eslint-plugin-security": "^3.0.1",
    "fast-check": "^4.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}
